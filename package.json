{
  "name": "radio-calico",
  "version": "1.0.0",
  "description": "A modern online radio station with HLS streaming, real-time metadata, rating system. Built with Next.js 15, ShadCN UI, React Query & Claude Code MCP",
  "main": "index.js",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:local": "npm run dev:local --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "build:local": "npm run build:local --workspace=frontend",
    "build:remote": "npm run build:remote --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:local": "npm run ci:prepare:local && npm run ci:local:setup && playwright test",
    "test:e2e:remote": "npm run ci:prepare:production && npm run ci:production:setup && playwright test",
    "ci:prepare:production": "node scripts/ci/prepare-production.js",
    "db:test:remote": "node scripts/ci/db-test-remote.cjs",
    "db:status": "node scripts/ci/db-status.cjs",
    "db:query:local:file": "psql postgresql://postgres:postgres@127.0.0.1:5432/radio_calico -f",
    "ci:prepare:local": "node scripts/ci/prepare-local.cjs",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:db:push": "npx prisma db push",
    "prisma:db:pull": "npx prisma db pull",
    "prisma:db:seed": "npx prisma db seed",
    "db:push:remote": "node scripts/ci/db-push-remote.cjs",
    "db:migrate:remote": "node scripts/ci/migrate-remote.cjs"
  },
  "keywords": [
    "radio",
    "hls",
    "nextjs",
    "prisma",
    "nextauth",
    "authentication"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "prisma": "^6.14.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vitest": "^2.1.0"
  }
}
