# Project Configuration
NEXT_PUBLIC_PROJECT_NAME="your_projects_name"
NEXT_PUBLIC_PROJECT_URL="https://yourdomain.com"

# Database
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key"
DIRECT_DATABASE_URL="postgres://hash1:sk_hash2part1-hash2part2@db.prisma.io:5432/?sslmode=require"


# NextAuth.js Configuration - Production
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-production-nextauth-secret-here

# Google OAuth Provider - Production
AUTH_GOOGLE_ID=your-production-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-production-google-client-secret

# GitHub OAuth Provider - Production
AUTH_GITHUB_ID=your-production-github-client-id
AUTH_GITHUB_SECRET=your-production-github-client-secret

# Radio Stream URL
RADIO_STREAM_URL="your_radio_stream_url"

# App Environment
NEXT_PUBLIC_ENV="remote"
NODE_ENV="production"

# Email Provider for NextAuth.js
EMAIL_SERVER_HOST=your_email_server_host
EMAIL_SERVER_PORT=your_email_server_port
EMAIL_SERVER_USER=your_email_server_user
EMAIL_SERVER_PASSWORD=your_email_server_user_password
EMAIL_FROM=your_email_server_mailbox

# OAuth Callback URLs (for provider configuration):
# Google: https://yourdomain.com/api/auth/callback/google
# GitHub: https://yourdomain.com/api/auth/callback/github

# Rate Limiting Configuration (in milliseconds)
# Magic Link Rate Limits
RATE_LIMIT_MAGIC_LINK_WINDOW=30000  # 30 seconds
RATE_LIMIT_MAGIC_LINK_MAX_ATTEMPTS=3

# Password Reset Rate Limits  
RATE_LIMIT_PASSWORD_RESET_WINDOW=45000  # 45 seconds
RATE_LIMIT_PASSWORD_RESET_MAX_ATTEMPTS=3

# Email Verification Rate Limits
RATE_LIMIT_EMAIL_VERIFICATION_WINDOW=30000  # 30 seconds
RATE_LIMIT_EMAIL_VERIFICATION_MAX_ATTEMPTS=3

# User Email Change Rate Limits
# Temporary disable period upon email change
NEXT_PUBLIC_USER_EMAIL_CHANGE_TEMP_DISABLE_DURATION=3600000 # 1 hour

RATE_LIMIT_EMAIL_CHANGE_WINDOW=60000  # 1 minutes
RATE_LIMIT_EMAIL_CHANGE_MAX_ATTEMPTS=2

# Signup Rate Limits
RATE_LIMIT_SIGNUP_WINDOW=45000  # 45 seconds
RATE_LIMIT_SIGNUP_MAX_ATTEMPTS=3

# Email Password Signin Rate Limits
RATE_LIMIT_SIGNIN_WINDOW=45000  # 45 seconds
RATE_LIMIT_SIGNIN_MAX_ATTEMPTS=5

# Contact (Public & Private, combined) Rate Limits
RATE_LIMIT_CONTACT_WINDOW=45000 # 45 seconds
RATE_LIMIT_CONTACT_MAX_ATTEMPTS=2

# Email Link Result Pages Rate Limits (activation-result, magic-link-result, email-verification-result, password-reset-result)
RATE_LIMIT_EMAIL_LINK_RESULT_WINDOW=45000 # 45 seconds
RATE_LIMIT_EMAIL_LINK_RESULT_MAX_ATTEMPTS=3

# Auth System Timing Configuration
AUTH_FRESH_USER_WINDOW=120000  # 2 minutes in milliseconds
AUTH_SESSION_MAX_AGE=2592000   # 30 days in seconds
DATA_CLEANUP_WINDOW=86400000   # 24 hours in milliseconds